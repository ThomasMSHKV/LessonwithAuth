<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#09182C"/>
            <corners
                android:radius="25dp"/>
            <size
                android:width="300dp"/>


        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#071323"/>
            <corners
                android:radius="25dp"/>

            <size
                android:width="300dp"/>


        </shape>
    </item>
</selector>